---
const postListTitle = Astro.props.postListTitle || "Latest Posts";
const allPosts = await Astro.glob("../pages/posts/*.md");
---

<h4 data-ui="display">
  {postListTitle}
</h4>
<ul data-list="unstyled">
  {
    allPosts?.map((post) => (
      <li>
        <a href={post.url}>{post.frontmatter.title} </a>
      </li>
    ))
  }
</ul>
